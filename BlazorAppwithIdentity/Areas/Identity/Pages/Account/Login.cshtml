@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card shadow border-0 my-4 col-12 col-md-8 col-lg-6 mx-auto">
    <div class="card-header bg-dark text-white text-center py-3">
        <h1 class="m-0">@ViewData["Title"]</h1>
    </div>
    <div class="card-body p-4">
        <form id="loginForm" method="post">
            <h2 class="text-center">Use a local account to log in.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-12">
                    <div class="border p-4 mt-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100">Log in</button>
                        </div>
                        <p class="text-center mt-3">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Register as a new user</a>
                        </p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
